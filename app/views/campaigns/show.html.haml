              .date 30 Days left
        - unless @campaign.tickets.empty?
          .mui-row.tickets-by-price
            = render partial: 'tickets_section', locals: {tickets: @campaign.tickets}
        .mui-row
          .mui-col-md-12
            .share-campaign
              %label= "Share:"
              %ul.artist-social-share
                %li
                  %a{href: "https://twitter.com/intent/tweet?url=http://venue-show.herokuapp.com#{campaign_path}&text=#{@campaign.title}&via=venue_sthlm", target: "_blank ", title: "Share on Twitter"}= icon('fab', 'twitter')
                  %a{href: "https://www.facebook.com/sharer/sharer.php?u=venue-show.herokuapp.com/#{campaign_path}", target: "_blank", title: "Share on Facebook", image: @campaign.image}= icon('fab', 'facebook')
      .form-group
        %ul.admin-links
          - if @campaign.pending? && current_user.admin?
            %li  
              = link_to 'Accept', campaign_path(@campaign, event: 'accept'), method: :put, class: 'form-submit'
          - if user_signed_in? && current_user.admin?
            %li  
              = link_to 'Archive Campaign', campaign_path(@campaign, event: 'archive'), method: :put, data: { confirm: 'Are you sure?' }, class: 'form-submit'
            %li  
              = link_to 'Edit', edit_campaign_path(@campaign), remote: true, class: 'form-submit'